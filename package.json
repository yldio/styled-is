{
  "name": "styled-is",
  "version": "1.3.0",
  "license": "MPL-2.0",
  "repository": "git@github.com:yldio/styled-is.git",
  "description": "Flag utility for styled-components",
  "keywords": [
    "flag",
    "flags",
    "react",
    "css",
    "css-in-js",
    "styled-components"
  ],
  "files": [
    "dist"
  ],
  "source": "index.js",
  "main": "dist/styled-is.js",
  "umd:main": "dist/styled-is.umd.js",
  "module": "dist/styled-is.esm.js",
  "esmodule": "dist/styled-is.modern.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "microbundle build --no-compress --jsx React.createElement",
    "eslint": "eslint . --ext .js --ext .ts",
    "fmt": "prettier --config package.json --write '**/*'",
    "test": "npm run build; NODE_ENV=test c8 -r lcovonly -r text ava test.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "ava": "^3.12.1",
    "babel-eslint": "^10.1.0",
    "c8": "^7.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-config-xo-space": "^0.25.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "microbundle": "^0.12.3",
    "node-gyp": "^7.1.0",
    "prettier": "^2.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.1",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "styled-components": "^4.1.3 || ^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --config package.json --write",
      "git add"
    ],
    "*.*": [
      "prettier --config package.json --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "xo-space/esnext",
      "react-app",
      "xo-react/space",
      "prettier",
      "prettier/react"
    ],
    "rules": {
      "capitalized-comments": 0,
      "new-cap": 0,
      "react/prop-types": 1
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
