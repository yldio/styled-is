{
  "name": "styled-is",
  "version": "1.1.0",
  "license": "MPL-2.0",
  "description": "Flag utility for styled-components",
  "keywords": [
    "flag",
    "flags",
    "react",
    "css",
    "css-in-js",
    "styled-components"
  ],
  "repository": "github:yldio/styled-is",
  "main": "dist/styled-is.umd.js",
  "jsnext:main": "dist/styled-is.es.js",
  "module": "dist/styled-is.es.js",
  "entry": "src/index.js",
  "directories": {
    "lib": "dist"
  },
  "bundlesize": [
    {
      "path": "./src/index.js",
      "maxSize": "223 B"
    }
  ],
  "scripts": {
    "lint": "eslint . --fix",
    "fmt": "prettier --write --single-quote src/*.js",
    "ava": "NODE_ENV=test nyc --reporter=lcov --reporter=text ava",
    "build": "bup",
    "prepublish": "bup",
    "size": "bundlesize",
    "test": "run-s lint ava size"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-es2015-arrow-functions": "^6.22.0",
    "babel-plugin-transform-es2015-parameters": "^6.24.1",
    "babel-plugin-transform-es2015-spread": "^6.22.0",
    "babel-plugin-transform-es2015-template-literals": "^6.22.0",
    "babel-register": "^6.26.0",
    "bundlesize": "^0.15.2",
    "bup": "^2.0.5",
    "eslint": "^4.8.0",
    "eslint-config-joyent-portal": "^3.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-config-xo-space": "^0.17.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.2.1",
    "prettier": "^1.7.4",
    "react": "^16.0.0",
    "styled-components": "^2.2.1"
  },
  "peerDependencies": {
    "react": "*",
    "styled-components": "*"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "babel": {
    "sourceMaps": "inline",
    "plugins": [
      "transform-es2015-parameters",
      "transform-es2015-template-literals",
      "transform-es2015-arrow-functions",
      "transform-es2015-spread"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "ava": {
    "tap": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
