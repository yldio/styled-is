{
  "name": "styled-is",
  "version": "1.2.2",
  "license": "MPL-2.0",
  "description": "Flag utility for styled-components",
  "keywords": [
    "flag",
    "flags",
    "react",
    "css",
    "css-in-js",
    "styled-components"
  ],
  "repository": "github:yldio/styled-is",
  "main": "dist/styled-is.umd.js",
  "jsnext:main": "dist/styled-is.es.js",
  "module": "dist/styled-is.es.js",
  "entry": "src/index.js",
  "directories": {
    "lib": "dist"
  },
  "types": "src/index.d.ts",
  "scripts": {
    "build": "bup",
    "fmt": "prettier --config .prettierrc --write '**/*'",
    "lint": "eslint .",
    "prepublish": "bup",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text ava"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ava": "^1.3.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.1",
    "bup": "^5.0.1",
    "cross-env": "^5.2.0",
    "eslint": "5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-config-xo-space": "^0.21.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "styled-components": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "styled-components": "^4.1.3"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "ava": {
    "tap": true,
    "babel": {
      "testOptions": {
        "presets": [
          "@babel/preset-react"
        ]
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --config .prettierrc --write",
      "git add"
    ],
    "*.*": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  }
}
